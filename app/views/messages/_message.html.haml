.message
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.content.present?
      %p.message__text-content
        = message.content
    = image_tag message.image.url, class: 'message__text-image' if message.image.present?